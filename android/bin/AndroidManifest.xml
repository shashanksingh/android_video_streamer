<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shashanksingh.video_streamer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_transparent"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:logo="@drawable/logo">
        <activity
            android:name="com.shashanksingh.video_streamer.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="login" android:screenOrientation="portrait"></activity>
        <activity android:name="signup" android:screenOrientation="portrait"></activity>
        <activity android:name="play" android:screenOrientation="portrait"></activity>
        <activity android:name="io.vov.vitamio.activity.InitActivity" 
		  android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden"
		  android:launchMode="singleTop"
		  android:theme="@android:style/Theme.NoTitleBar"
		  android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>
